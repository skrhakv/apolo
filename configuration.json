{
    "project_name": "cryptic-site-pred",
    "data_directory": "data",
    "remote_embedding_computation": {
        "__comment__are_embeddings_precomputed__": "true if precomputed embeddings are already provided in the 'embeddings_directory'",
        "are_embeddings_precomputed": true,
        "server_url": "http://127.0.0.1:5050",
        "fasta_file_location": "data/fasta_file/sequences.fasta",
        "__comment__embedder__": "only values 'xlnet', 'bert', 'albert', 'onehot', 't5', 'esm' are allowed",
        "embedder": "bert"
    },
    "embeddings_directory": "data/embeddings/cryptobench-v2/cryptobench-ahojv2-cut",
    "tuner_directory": "data/metadata/cryptobench-v2/hyperparameter-tuning",
    "model_directory": "data/metadata/cryptobench-v2/results-apo-esm2",
    "statistics_directory": "data/statistics/cryptobench-v2/statistics",
    "test_annotations_path": "data/annotations/cryptobench-v2/cryptobench-translated-annotations/test.csv",
    "test_noncryptic_annotations_path": "data/annotations/cryptobench-v2/cryptobench-noncryptic-translated-annotations/test.csv",
    "train_annotations_path": [
        "data/annotations/cryptobench-v2/cryptobench-translated-annotations/train-fold-0.csv",
        "data/annotations/cryptobench-v2/cryptobench-translated-annotations/train-fold-1.csv",
        "data/annotations/cryptobench-v2/cryptobench-translated-annotations/train-fold-2.csv",
        "data/annotations/cryptobench-v2/cryptobench-translated-annotations/train-fold-3.csv"
    ],
    "predictions_output_directory": "data/statistics/cryptobench-v2/statistics-final-threshold-0.75/predictions",
    "hypermodel": {
        "neuron_size_min": 128,
        "neuron_size_max": 512,
        "neuron_size_step": 128,
        "number_of_layers_min": 1,
        "number_of_layers_max": 3,
        "number_of_layers_step": 1,
        "dropout_min": 0.3,
        "dropout_max": 0.7,
        "dropout_step": 0.2,
        "learning_rate": [
            1e-4, 1e-3
        ],
        "batch_size": [
             2048
        ]
    },
    "early_stopping": {
        "patience": 2,
        "min_delta": 0.1,
        "max_epochs": 50
    }
}